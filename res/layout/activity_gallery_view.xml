<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="@drawable/eperion_background"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/infoCarrier" android:weightSum="1">
	  <TextView 
	  	android:id="@+id/tool_title"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:layout_gravity="center"
	  	android:text="E-Perion Gallery"
	  	android:textStyle="bold"
	  	android:textColor="#ffffff"
	  	android:layout_marginBottom="10px"
	  	android:layout_marginLeft="115dip">
	  </TextView>
	  <ImageButton 
	        android:id="@+id/buttonReset" 
			android:src="@drawable/reset"
			android:contentDescription="Reset the database"
 			android:layout_width="40dip" 
			android:layout_gravity="center"
			android:layout_marginLeft="52dip" android:layout_height="40dip">
	  </ImageButton>
  </LinearLayout>
  
  <RelativeLayout
		android:layout_width="match_parent"
		android:id="@+id/linearLayout1"
		android:layout_height="match_parent">
    		<LinearLayout
    				android:orientation="vertical"
    				android:layout_width="fill_parent"
    				android:layout_height="fill_parent"
    				android:scrollbars="vertical"
    				android:layout_marginTop="10dp"
    				android:id="@+id/listPicture">
    				<LinearLayout
    					android:orientation="horizontal"
    					android:layout_width="fill_parent"
    					android:layout_height="wrap_content">
	    				<TextView 
	    					android:layout_width="wrap_content"
	    					android:layout_height="wrap_content"
	    					android:layout_gravity="center"
	    					android:textColor="#ffffff"
	    					android:layout_marginLeft="92dip"
	    					android:text="Picture in your gallery"
	    					android:textStyle="bold"/>
	    				<ImageButton 
	    					android:id="@+id/mapButton"
	    					android:src="@drawable/ic_menu_map"
	    					android:contentDescription="Go to Google Map"
	    					android:layout_marginLeft="40dip"
	    					android:layout_width="60px"
	    					android:layout_height="60px"
	    					android:layout_gravity="center"/>
    				</LinearLayout>
    				<ListView 
    					android:id="@+id/listPictureGallery"
    					android:layout_width="fill_parent"
    					android:layout_height="fill_parent"
    					android:cacheColorHint="#0000"
            			android:clipToPadding="true">
    				</ListView>
    		</LinearLayout>	
	</RelativeLayout>
</LinearLayout>
